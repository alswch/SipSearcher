<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :firstname, "First Name" %><br />
    <%= f.text_field :firstname, id: "firstname", class: "data-value", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :lastname, "Last Name" %><br />
    <%= f.text_field :lastname, id: "lastname", class: "data-value", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :username, "Username" %><br />
    <%= f.text_field :username, id: "username", class: "data-value", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, id: "email", class: "data-value", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, id: "password", class: "data-value", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation" %><br />
    <%= f.password_field :password_confirmation, id: "password_confirmation", class: "data-value", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
